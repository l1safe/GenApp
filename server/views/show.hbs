<h3>Список объектов</h3>

<h5 class="center" style="margin-bottom: 30px">Страница: №{{page}}</h5>



{{#each cards}}
<div style="margin-bottom: 20px">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="row">
        <div class="col s8">
        <span class="card-title"><p class="id-col"> ID:{{this.id}}</p> {{this.title}}</span>
        </div>
        <form action="/show" method="POST">
        <div class="col s4">
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="hidden" name="title" value="{{this.title}}">
        <input type="hidden" name="price" value="{{this.price}}">
        <input type="hidden" name="description" value="{{this.description}}">
        <input type="hidden" name="rank" value="{{this.rank}}">
        <input type="hidden" name="region" value="{{this.regID}}">
        <input type="hidden" name="req" value="{{this.reqID}}">
        <input type="hidden" name="type" value="{{this.type_ID}}">
        <input type="hidden" name="regionName" value="{{this.region}}">
        <input type="hidden" name="typeName" value="{{this.typeName}}">
        <input type="hidden" name="reqName" value="{{this.requirements}}">
        <button class="waves-effect red darken-4 btn right" name="btn" type="submit" value="delete">delete</button>
        <button class="waves-effect waves-light btn right" name="btn" type="submit" value="edit">edit</button>
        </div>
        </form>
        
      </div>
      <p>{{this.description}}</p>
    </div>
    <div class="card-action card-content white-text">
      <p class="p-show">Ранг:  <span style="color:#18f5ed">{{#if this.rank}}{{this.rank}}</span> {{else}} Не имеет значения {{/if}}</span></p>
      <p class="p-show">Регон:   <span style="color:#18f5ed">{{this.region}};</span> <span class="id-col"> ID: {{this.regID}}</span></p>
        {{#if this.requirements}}
      <p class="p-show">Необходимое задание:   <span style="color:#18f5ed">{{this.requirements}};</span>      <span class="id-col"> ID: {{this.reqID}}</span></p> 
      {{/if}} 
      <p class="p-show">Тип задания:  <span style="color:#18f5ed">{{this.typeName}};</span> <span class="id-col"> ID: {{this.type_ID}}</span></p>
      <p class="p-show">Примогемы:  <span style="color:#18f5ed">{{this.price}}</span></p>
    </div>
  </div>
</div>
{{/each}}
  
<div class="container center">
  <ul class="pagination">
    {{#each pagesMass}}
        <li class="active"><a type="submit" href="/show?page={{this}}">{{this}}</a></li>
    {{/each}}
  </ul>
</div>